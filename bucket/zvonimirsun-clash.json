{
    "homepage": "https://github.com/Fndroid/clash_for_windows_pkg",
    "description": "A Windows GUI based on Clash https://docs.cfw.lbyczf.com/",
    "version": "0.10.1",
    "license": "MIT",
    "url": "https://github.com/Fndroid/clash_for_windows_pkg/releases/download/0.10.1/Clash.for.Windows.Setup.0.10.1.exe#/clash.7z",
    "hash": "d8dce95d46766fc4704fcfaa93121e4b2b4d854a919029aaa247323a30f029e2",
    "shortcuts": [
        [
            "Clash for Windows.exe",
            "Clash"
        ]
    ],
    "pre_install": [
        "Remove-Item -Recurse \"$dir\\Uninstall Clash for Windows.exe\"",
        "Get-ChildItem -Path \"$dir\\`$PLUGINSDIR\" -Depth \"2\" -Include \"*.7z\" | Move-Item -Destination \"$dir\\`$PLUGINSDIR\"",
        "Expand-7zipArchive -Path \"$dir\\`$PLUGINSDIR\\app-64.7z\" -DestinationPath \"$dir\"",
        "Remove-Item -Recurse \"$dir\\`$PLUGINSDIR\"",
        "if (-not (Test-Path \"$persist_dir\\resources\\static\\files\")) {",
        "    mkdir -p \"$persist_dir\\resources\\static\\files\"",
        "}",
        "if (-not (Test-Path \"$persist_dir\\resources\\static\\files\\config.yaml\")) {",
        "    Write-Host 'File config.yaml does not exists. Creating.' -f Yellow",
        "    Copy-Item \"$dir\\resources\\static\\files\\default\\config.yaml\" -Destination \"$persist_dir\\resources\\static\\files\\config.yaml\" -Force",
        "}"
    ],
    "persist": [
        "resources\\static\\files\\profiles",
        "resources\\static\\files\\config.yaml"
    ],
    "checkver": "github",
    "autoupdate": {
        "url": "https://github.com/Fndroid/clash_for_windows_pkg/releases/download/$version/Clash.for.Windows.Setup.$version.exe#/clash.7z",
        "hash": {
            "url": "https://github.com/Fndroid/clash_for_windows_pkg/releases/download/$version/sha256sum",
            "regex": "exe: $sha256"
        }
    }
}
