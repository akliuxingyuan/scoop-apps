{
    "version": "2.2.0.0",
    "url": "https://downloads.sourceforge.net/project/zapps/HefuGen/HefuGen-2.2.0.0.7z",
    "hash": "sha1:d68d333ea066e1dcc937006350d86cf0804d5c90",
    "checkver": {
        "url": "https://sourceforge.net/projects/zapps/rss?path=/HefuGen",
        "re": "/HefuGen/HefuGen-(.*).7z"
    },
    "autoupdate": {
        "url": "https://downloads.sourceforge.net/project/zapps/HefuGen/HefuGen-$version.7z",
        "hash": {
            "mode": "sourceforge"
        }
    },
    "bin": "HefuGen.exe",
    "post_install": [
        "if (Test-Path \"$dir\\add-context.reg\") {",
        "  $apppath = \"$dir\\HefuGen.exe\".Replace('\\', '\\\\')",
        "  $content = Get-Content \"$dir\\add-context.reg\"",
        "  $content = $content.Replace('$path', $apppath)",
        "  $content | Set-Content -Path \"$dir\\add-context.reg\"",
        "}",
        "regedit /s $dir\\add-context.reg"
    ],
    "uninstaller": {
        "script": "regedit /s $dir\\del-context.reg"
    }
}
