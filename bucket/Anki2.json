{
    "version": "2.1.20",
    "description": "Powerful and intelligent flash cards",
    "homepage": "https://apps.ankiweb.net",
    "license": "AGPL-3.0-only",
    "suggest": {
        "vcredist": "extras/vcredist2008"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/ankitects/anki/releases/download/2.1.20/anki-2.1.20-windows.exe#/dl.7z"
        },
        "32bit": {
            "url": "https://github.com/ankitects/anki/releases/download/2.1.20/anki-2.1.20-windows-alternate.exe#/dl.7z"
        }
    },
    "pre_install": [
        "@(",
        "    '@echo off'",
        "    'SET _allParams=\"%*\"'",
        "    'IF /i %_allParams:-b =%==%_allParams% ('",
        "    \"    start `\"anki`\" /D `\"%~dp0`\" `\"%~dp0anki.exe`\" -b `\"$persist_dir\\data`\" %*\"",
        "    ') ELSE ('",
        "    '    start \"anki\" /D \"%~dp0\" \"%~dp0anki.exe\" %*'",
        "    ')'",
        ") | Set-Content \"$dir\\anki.cmd\" -Encoding ASCII",
        "Remove-Item \"$dir\\`$*\" -Recurse"
    ],
    "bin": "anki.cmd",
    "shortcuts": [
        [
            "anki.cmd",
            "Anki",
            "",
            "anki.exe"
        ]
    ],
    "persist": "data"
}
