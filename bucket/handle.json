{
    "version": "4.22",
    "description": "Handle. Displays information about open handles for any process in the system. (What file or directory has process opened.)",
    "homepage": "https://docs.microsoft.com/en-us/sysinternals/downloads/handle",
    "license": {
        "identifier": "Freeware",
        "url": "https://docs.microsoft.com/en-us/sysinternals/license-terms"
    },
    "url": "https://download.sysinternals.com/files/Handle.zip",
    "hash": "1f2e6eda07f0581c1cfac733f34005c9122c4d2a9d5e0b6d99797502a76ad79e",
    "installer": {
        "script": [
            "$sysint = 'HKCU:\\Software\\Sysinternals'",
            "$fin = \"$sysint\\Handle\"",
            "New-Item $sysint, $fin -ErrorAction SilentlyContinue -Force | Out-Null",
            "Set-ItemProperty -Path $fin -Name 'EulaAccepted' -Value 1 -Type DWord -Force | Out-Null"
        ]
    },
    "uninstaller": {
        "script": [
            "if ($purge) {",
            "    $sysInt = 'HKCU:\\Software\\Sysinternals'",
            "    Remove-Item \"$sysInt\\Handle\" -Force -Recurse",
            "    if ((Get-ChildItem $sysInt).Count -eq 0) { Remove-Item $sysInt -Force -Recurse }",
            "}"
        ]
    },
    "architecture": {
        "64bit": {
            "bin": [
                "handle64.exe",
                [
                    "handle64.exe",
                    "handle"
                ]
            ]
        },
        "32bit": {
            "bin": "handle.exe"
        }
    },
    "checkver": "Handle\\s+v([\\d.]+)</h1",
    "autoupdate": {
        "url": "https://download.sysinternals.com/files/Handle.zip"
    }
}
