    "version": "0.2.0",
    "url": "https://github.com/naihe2010/apvlv/archive/v0.2.0.zip",
    "hash": "c3ec50bcd8bb042ed85beeeeeda061435749b365321eb6ed176fa89b974a1426",
    "installer": {
        "script": [
            "$file = (Get-ChildItem \"$dir\" 'apvlv-*.exe' | Select-Object -First 1).FullName",
            "Expand-7ZipArchive \"$file\" \"$dir\" -Removal",
            "Remove-Item \"$dir\\`$PLUGINSDIR\", \"$dir\\Uninstall.exe\"  -Force -Recurse"
        ]
    },
    "bin": "apvlv.exe",
    "shortcuts": [
        [
            "apvlv.exe",
            "Apvlv"
        ]
    ],
    "persist": "_apvlvrc",
    "checkver": {
        "github": "https://github.com/naihe2010/apvlv"
    },
    "autoupdate": {
        "url": "https://github.com/naihe2010/apvlv/archive/v$version.zip"
    }
}
