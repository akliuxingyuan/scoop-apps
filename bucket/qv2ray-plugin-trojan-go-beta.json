        "64bit": {
            "url": "https://github.com/Qv2ray/QvPlugin-Trojan-Go/releases/download/v3.0.0-rc1/QvPlugin-TrojanGo.v3.0.0-rc1.Windows-x64.dll",
            "hash": "930ca21018afbaabff2118f9b98f73d76be6148a82b975cd8aaeb2f01b77b4a2"
        },
        "32bit": {
            "url": "https://github.com/Qv2ray/QvPlugin-Trojan-Go/releases/download/v3.0.0-rc1/QvPlugin-TrojanGo.v3.0.0-rc1.Windows-x86.dll",
            "hash": "dc4ae327fe2f4b1d04903023cd5cfd00a2fd39f5e7cb201f5a1f58f74ed7a940"
        }
    },
    "installer": {
        "script": [
            "function LinkFile([String] $file, [String] $source = $file) {",
            "    Write-Host \"Creating hardlink for $file\"",
            "    New-Item -Force -ItemType HardLink -Path \"$(appdir qv2ray-beta $global)\\current\\config\\plugins\" -Name $file -Target \"$dir\\$source\" | Out-Null",
            "}",
            "LinkFile 'trojan-go.dll' '*.dll'",
            "$config = \"$(appdir qv2ray-beta $global)\\current\\config\\plugin_settings\\qvtrojango_plugin.conf\"",
            "if (-not (Test-Path $config)) {",
            "    New-Item \"$(appdir qv2ray-beta $global)\\current\\config\\plugin_settings\" -ItemType Directory | Out-Null",
            "    $trojanGoPath = $(appdir trojan-go $global).Replace('\\', '/')",
            "    @{",
            "        'kernelPath' = \"$trojanGoPath/current/trojan-go.exe\"",
            "    } | ConvertTo-Json -Depth 20 | Out-File $config",
            "}"
        ]
    },
    "uninstaller": {
        "script": "Remove-Item \"$(appdir qv2ray-beta $global)\\current\\config\\plugins\\trojan-go.dll\" -Force"
    },
    "checkver": {
        "url": "https://github.com/Qv2ray/QvPlugin-Trojan-Go/releases",
        "regex": "/releases/tag/(?:v|V)?([\\w.-]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/Qv2ray/QvPlugin-Trojan-Go/releases/download/v$version/QvPlugin-TrojanGo.v$version.Windows-x64.dll"
            },
            "32bit": {
                "url": "https://github.com/Qv2ray/QvPlugin-Trojan-Go/releases/download/v$version/QvPlugin-TrojanGo.v$version.Windows-x86.dll"
            }
        },
        "hash": {
            "url": "https://github.com/Qv2ray/QvPlugin-Trojan-Go/releases/download/v$version/sha256.list"
        }
    }
}
