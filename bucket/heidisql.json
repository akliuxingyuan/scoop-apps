        "url": "https://www.heidisql.com/download.php",
        "regex": "Download HeidiSQL ([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://www.heidisql.com/downloads/releases/HeidiSQL_$version_64_Portable.zip"
