{
    "version": "10.2.6",
    "description": "Clean registry junks, repair Windows errors, and keep your PC at peak performance.",
    "homepage": "https://www.wisecleaner.com/wise-registry-cleaner.html",
    "license": "Freeware",
    "url": "http://downloads.wisecleaner.com/soft/WRCFree_10.2.6.686.exe#/setup.exe",
    "hash": "A3733D96EBC8AC4E9DC1375948D1B956AB86636CEA0092DDF4A0731D4D9E2635",
    "extract_dir": "Wise Disk Cleaner",
    "innosetup": true,
    "pre_install": {
        "script": [
            "$file = 'config.ini'",
            "if (-not (Test-Path \"$persist_dir\\$file\")) {",
            "    Write-Host 'File' $file 'does not exists. Creating.' -f Yellow",
            "    $CONT = (Get-Content \"$dir\\$file\")",
            "    $CONT = $CONT -replace 'checkNewVer=1', 'checkNewVer=0'",
            "    Set-Content \"$dir\\$file\" ($CONT -join \"`r`n\") -Encoding Ascii",
            "}"
        ]
    },
    "shortcuts": [
        [
            "WiseRegCleaner.exe",
            "Wise Registry Cleaner"
        ]
    ]
}
