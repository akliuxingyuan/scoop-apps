{
    "version": "3.10",
    "description": "Autologon. Easily configure Windows built-in autologon mechanism.",
    "homepage": "https://docs.microsoft.com/en-us/sysinternals/downloads/autologon",
    "license": {
        "identifier": "Freeware",
        "url": "https://docs.microsoft.com/en-us/sysinternals/license-terms"
    },
    "url": "https://download.sysinternals.com/files/AutoLogon.zip",
    "hash": "4ba5b92411a9b4b8743bdc479ead0e3f50ed2c8cb5517a49246ef57f3ebb09c7",
    "installer": {
        "script": [
            "$sysint = 'HKCU:\\Software\\Sysinternals'",
            "$fin = \"$sysint\\Autologon\"",
            "New-Item $sysint, $fin -ErrorAction SilentlyContinue -Force | Out-Null",
            "Set-ItemProperty -Path $fin -Name 'EulaAccepted' -Value 1 -Type DWord -Force | Out-Null"
        ]
    },
    "uninstaller": {
        "script": [
            "if ($purge) {",
            "    $sysInt = 'HKCU:\\Software\\Sysinternals'",
            "    Remove-Item \"$sysInt\\Autologon\" -Force -Recurse",
            "    if ((Get-ChildItem $sysInt).Count -eq 0) { Remove-Item $sysInt -Force -Recurse }",
            "}"
        ]
    },
    "shortcuts": [
        [
            "Autologon.exe",
            "SysInternals\\Autologon"
        ]
    ],
    "checkver": "Autologon\\s+v([\\d.]+)</h1",
    "autoupdate": {
        "url": "https://download.sysinternals.com/files/AutoLogon.zip"
    }
}
