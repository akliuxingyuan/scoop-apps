{
    "version": "0.1",
    "url": "https://downloads.sourceforge.net/project/zapps/Azw3ToMobi/Azw3ToMobi-0.1.7z",
    "hash": "sha1:6a7a1f14d6de785670a51e28d6fad99647d47bfb",
    "bin": "azw3_to_mobi.exe",
    "depends": [
        "kindlegen",
        "kindleunpack"
    ],
    "post_install": [
        "if (Test-Path \"$dir\\add-context.reg\") {",
        "  $apppath = \"$dir\\azw3_to_mobi.bat\".Replace('\\', '\\\\')",
        "  $content = Get-Content \"$dir\\add-context.reg\"",
        "  $content = $content.Replace('$path', $apppath)",
        "  $content | Set-Content -Path \"$dir\\add-context.reg\"",
        "}",
        "regedit /s $dir\\add-context.reg"
    ],
    "checkver": {
        "url": "https://sourceforge.net/projects/zapps/rss?path=/Azw3ToMobi",
        "re": "/Azw3ToMobi/Azw3ToMobi-(.*).7z"
    },
    "autoupdate": {
        "url": "https://downloads.sourceforge.net/project/zapps/Azw3ToMobi/Azw3ToMobi-$version.7z",
        "hash": {
            "mode": "sourceforge"
        }
    },
    "uninstaller": {
        "script": "regedit /s $dir\\del-context.reg"
    }
}
