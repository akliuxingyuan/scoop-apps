    ],
    "pre_install": [
        "if (-not (Test-Path \"$persist_dir\\resources\\static\\files\")) {",
        "    mkdir -p \"$persist_dir\\resources\\static\\files\"",
        "}",
        "if (-not (Test-Path \"$persist_dir\\resources\\static\\files\\config.yaml\")) {",
        "    Write-Host 'File config.yaml does not exists. Creating.' -f Yellow",
        "    Copy-Item \"$dir\\resources\\static\\files\\default\\config.yaml\" -Destination \"$persist_dir\\resources\\static\\files\\config.yaml\" -Force",
        "}"
    ],
    "persist": [
        "resources\\static\\files\\profiles",
        "resources\\static\\files\\config.yaml"
    ],
    "checkver": "github",
    "autoupdate": {
        "url": "https://github.com/Fndroid/clash_for_windows_pkg/releases/download/$version/Clash.for.Windows-$version-win.7z",
        "hash": {
            "url": "https://github.com/Fndroid/clash_for_windows_pkg/releases/download/$version/sha256sum",
            "regex": "7z: $sha256"
        }
    }
