{
    "version": "1.6",
    "description": "Streams. Reveal NTFS files have streams associated with them.",
    "homepage": "https://docs.microsoft.com/en-us/sysinternals/downloads/streams",
    "license": {
        "identifier": "Freeware",
        "url": "https://docs.microsoft.com/en-us/sysinternals/license-terms"
    },
    "url": "https://download.sysinternals.com/files/Streams.zip",
    "hash": "97614bf16b54f1cc8adcaebf9f08f827b7b7d472861ec44b02d07a0fb711f6a8",
    "pre_install": [
        "$sysint = 'HKCU:\\Software\\Sysinternals'",
        "$fin = \"$sysint\\Streams\"",
        "if (-not (Test-Path $sysint)) { New-Item $sysint -Force | Out-Null }",
        "if (-not (Test-Path $fin)) { New-Item $fin -Force | Out-Null }",
        "Set-ItemProperty -Path $fin -Name 'EulaAccepted' -Value 1 -Type DWord -Force | Out-Null"
    ],
    "architecture": {
        "64bit": {
            "bin": [
                "streams64.exe",
                [
                    "streams64.exe",
                    "streams"
                ]
            ]
        },
        "32bit": {
            "bin": "streams.exe"
        }
    },
    "checkver": "Streams\\s+v([\\d.]+)</h1",
    "autoupdate": {
        "url": "https://download.sysinternals.com/files/Streams.zip"
    }
}
