{
    "version": "1.2",
    "description": "DiskExt. Disk extent dumper",
    "homepage": "https://docs.microsoft.com/en-us/sysinternals/downloads/diskext",
    "license": {
        "identifier": "Freeware",
        "url": "https://docs.microsoft.com/en-us/sysinternals/license-terms"
    },
    "url": "https://download.sysinternals.com/files/DiskExt.zip",
    "hash": "b93bb3c1fca68a2ce6c52f273fa80ea841e20fd85a6579e68a0fe7106f16ee73",
    "installer": {
        "script": [
            "$sysint = 'HKCU:\\Software\\Sysinternals'",
            "$fin = \"$sysint\\DiskExt\"",
            "New-Item $sysint, $fin -ErrorAction SilentlyContinue -Force | Out-Null",
            "Set-ItemProperty -Path $fin -Name 'EulaAccepted' -Value 1 -Type DWord -Force | Out-Null"
        ]
    },
    "uninstaller": {
        "script": [
            "if ($purge) {",
            "    $sysInt = 'HKCU:\\Software\\Sysinternals'",
            "    Remove-Item \"$sysInt\\DiskExt\" -Force -Recurse",
            "    if ((Get-ChildItem $sysInt).Count -eq 0) { Remove-Item $sysInt -Force -Recurse }",
            "}"
        ]
    },
    "architecture": {
        "64bit": {
            "bin": [
                "diskext64.exe",
                [
                    "diskext64.exe",
                    "diskext"
                ]
            ]
        },
        "32bit": {
            "bin": "diskext.exe"
        }
    },
    "checkver": "DiskExt\\s+v([\\d.]+)</h1",
    "autoupdate": {
        "url": "https://download.sysinternals.com/files/DiskExt.zip"
    }
}
