    "license": "GPL-2.0-or-later",
    "version": "3.52.0.5",
    "architecture": {
        "64bit": {
            "url": "https://download.filezilla-project.org/client/FileZilla_3.52.0.5_win64.zip",
            "hash": "sha512:d302bd686661585841c6a931540f86b2308face088dcfe37f2f07d33d01e887bf9dad3ef5a4bbdcbe64b4eed89d14ab797f0cacbcb4b474c929c15ee1af356b5"
        },
        "32bit": {
            "url": "https://download.filezilla-project.org/client/FileZilla_3.52.0.5_win32.zip",
            "hash": "sha512:3b94516bba7a491e94cd1113502e97af7d295cb15c4a05ceac5944d71100d071b3e44d9663b0ce98122a7b04db7b933acb669f909c774de11f867853f8dfcdf1"
        }
    },
    "extract_dir": "FileZilla-3.52.0.5",
    "pre_install": [
        "if (!(Test-Path \"$persist_dir\\fzdefaults.xml\")) {",
        "    New-Item \"$dir\\fzdefaults.xml\" -Type File -Value '<?xml version=\"1.0\"?><FileZilla3><Settings><Setting name=\"Config Location\">./config</Setting></Settings></FileZilla3>' | Out-Null",
        "}"
    ],
    "shortcuts": [
        [
            "filezilla.exe",
            "FileZilla"
        ]
    ],
    "persist": [
        "fzdefaults.xml",
        "config"
    ],
    "checkver": {
        "url": "https://filezilla-project.org/download.php?show_all=1",
        "regex": "The latest stable version of FileZilla Client is ([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://download.filezilla-project.org/client/FileZilla_$version_win64.zip"
            },
            "32bit": {
                "url": "https://download.filezilla-project.org/client/FileZilla_$version_win32.zip"
            }
        },
        "hash": {
            "url": "$baseurl/FileZilla_$version.sha512"
        },
        "extract_dir": "FileZilla-$version"
    }
}
