{
    "homepage": "https://filezilla-project.org/",
    "description": "Fast and reliable cross-platform FTP, FTPS and SFTP client with lots of useful features and an intuitive graphical user interface.",
    "license": "GPL-2.0-or-later",
    "version": "3.52.0.4",
    "architecture": {
        "64bit": {
            "url": "https://download.filezilla-project.org/client/FileZilla_3.52.0.4_win64.zip",
            "hash": "sha512:ce5de5afbf483b5ed227ba7f753aeea553e98378d290188c08889f502eaf5941913e2ea326ce0479cdd2ead5bce50c1523f9d3a98f6789ad9d81e53f83ceed82"
        },
        "32bit": {
            "url": "https://download.filezilla-project.org/client/FileZilla_3.52.0.4_win32.zip",
            "hash": "sha512:c45be3a121adf6a2a5b90320daec57b4d8e191aed431edb5e368b4693357dda0736fbccb4e7548b5738cfb5a67e985ce5b8ef46234705b313c18eda1b66913ea"
        }
    },
    "extract_dir": "FileZilla-3.52.0.4",
    "pre_install": [
        "if (!(Test-Path \"$persist_dir\\fzdefaults.xml\")) {",
        "    New-Item \"$dir\\fzdefaults.xml\" -Type File -Value '<?xml version=\"1.0\"?><FileZilla3><Settings><Setting name=\"Config Location\">./config</Setting></Settings></FileZilla3>' | Out-Null",
        "}"
    ],
    "shortcuts": [
        [
            "filezilla.exe",
            "FileZilla"
        ]
    ],
    "persist": [
        "fzdefaults.xml",
        "config"
    ],
    "checkver": {
        "url": "https://filezilla-project.org/download.php?show_all=1",
        "regex": "The latest stable version of FileZilla Client is ([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://download.filezilla-project.org/client/FileZilla_$version_win64.zip"
            },
            "32bit": {
                "url": "https://download.filezilla-project.org/client/FileZilla_$version_win32.zip"
            }
        },
        "hash": {
            "url": "$baseurl/FileZilla_$version.sha512"
        },
        "extract_dir": "FileZilla-$version"
    }
}
