{
    "version": "0.1",
    "url": "https://zapps.ziiyc.com/Azw3ToMobi/Azw3ToMobi-0.1.7z",
    "hash": "cb023c52faaee79dc719b60c9b1477d2c5939ad4b24d0d4627cb9c7260a329d7",
    "bin": "azw3_to_mobi.exe",
    "depends": [
        "kindlegen",
        "kindleunpack"
    ],
    "post_install": [
        "if (Test-Path \"$dir\\add-context.reg\") {",
        "  $apppath = \"$dir\\azw3_to_mobi.bat\".Replace('\\', '\\\\')",
        "  $content = Get-Content \"$dir\\add-context.reg\"",
        "  $content = $content.Replace('$path', $apppath)",
        "  $content | Set-Content -Path \"$dir\\add-context.reg\"",
        "}",
        "regedit /s $dir\\add-context.reg"
    ],
    "checkver": {
        "url": "https://zapps.ziiyc.com/Azw3ToMobi/Azw3ToMobi.latest",
        "regex": "([\\d.]+)"
    },
    "autoupdate": {
        "url": "https://zapps.ziiyc.com/Azw3ToMobi/Azw3ToMobi-$version.7z",
        "hash": {
            "url": "$url.sha256",
            "regex": "$sha256"
        }
    },
    "uninstaller": {
        "script": "regedit /s $dir\\del-context.reg"
    }
}
