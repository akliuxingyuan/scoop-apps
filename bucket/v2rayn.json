{
    "version": "3.13",
    "description": "GUI client based on v2ray core",
    "homepage": "https://github.com/2dust/v2rayN",
    "license": "GPL-3.0-only",
    "url": "https://github.com/2dust/v2rayN/releases/download/3.13/v2rayN.zip",
    "hash": "bbd154c7d302885bc3877cd97db9dc4b36f5c740664d8682bf4d95e2696b86d3",
    "extract_dir": "v2rayN",
    "bin": "v2rayN.exe",
    "persist": [
        "user-wininet.json",
        "config.json",
        "guiNConfig.json"
    ],
    "depends": [
        "sudo",
        "v2ray"
    ],
    "shortcuts": [
        [
            "v2rayN.exe",
            "v2rayN"
        ]
    ],
    "pre_install": [
        "foreach ($name in @('guiNConfig.json', 'user-wininet.json')) {",
        "    if (!(Test-Path \"$persist_dir\\$name\")) {",
        "        New-Item -Force -Path \"$dir\" -Name $name | Out-Null",
        "    }",
        "}",
        "if (!(Test-Path \"$persist_dir\\config.json\")) {",
        "    Copy-Item \"$(appdir v2ray $global)\\current\\config.json\" \"$dir\" | Out-Null",
        "}",
        "foreach ($form in @('vpoint*.json')) {",
        "    foreach ($_ in Get-ChildItem \"$(appdir v2ray $global)\\current\" -File) {",
        "        $name = $_.Name",
        "        if ($name -Like $form) {",
        "            Write-Host \"Creating hardlink for $name\"",
        "            sudo New-Item -ItemType HardLink -Path \"$dir\" -Name $name -Target \"$(appdir v2ray $global)\\current\\$name\" | Out-Null",
        "        }",
        "    }",
        "}"
    ],
    "checkver": "github",
    "autoupdate": {
        "url": "https://github.com/2dust/v2rayN/releases/download/$version/v2rayN.zip"
    }
}
