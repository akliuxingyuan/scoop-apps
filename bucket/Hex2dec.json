{
    "version": "1.1",
    "description": "Hex2dec. Convert hex numbers to decimal and vice versa.",
    "homepage": "https://docs.microsoft.com/en-us/sysinternals/downloads/hex2dec",
    "license": {
        "identifier": "Freeware",
        "url": "https://docs.microsoft.com/en-us/sysinternals/license-terms"
    },
    "url": "https://download.sysinternals.com/files/Hex2Dec.zip",
    "hash": "677024c63ecc1e8d776ceea0996abe2522bb7bbe4761b4ea691ee4a495f7fa17",
    "installer": {
        "script": [
            "$sysint = 'HKCU:\\Software\\Sysinternals'",
            "$fin = \"$sysint\\Hex2Dec\"",
            "New-Item $sysint, $fin -ErrorAction SilentlyContinue -Force | Out-Null",
            "Set-ItemProperty -Path $fin -Name 'EulaAccepted' -Value 1 -Type DWord -Force | Out-Null"
        ]
    },
    "uninstaller": {
        "script": [
            "if ($purge) {",
            "    $sysInt = 'HKCU:\\Software\\Sysinternals'",
            "    Remove-Item \"$sysInt\\Hex2Dec\" -Force -Recurse",
            "    if ((Get-ChildItem $sysInt).Count -eq 0) { Remove-Item $sysInt -Force -Recurse }",
            "}"
        ]
    },
    "architecture": {
        "64bit": {
            "bin": [
                "hex2dec64.exe",
                [
                    "hex2dec64.exe",
                    "hex2dec"
                ]
            ]
        },
        "32bit": {
            "bin": "hex2dec.exe"
        }
    },
    "checkver": "Hex2dec\\s+v([\\d.]+)</h1",
    "autoupdate": {
        "url": "https://download.sysinternals.com/files/Hex2Dec.zip"
    }
}
