{
    "homepage": "https://www.retroarch.com/",
    "description": "Frontend for emulators, game engines and media players.",
    "license": "GPL-3.0-only",
    "version": "1.8.7",
    "architecture": {
        "64bit": {
            "url": "https://buildbot.libretro.com/stable/1.8.7/windows/x86_64/RetroArch.7z",
            "hash": "c9b9e8fd22de154b16efecf76d4027d72e88f2b07be7540dc4c889706bfdc235"
        },
        "32bit": {
            "url": "https://buildbot.libretro.com/stable/1.8.7/windows/x86/RetroArch.7z",
            "hash": "28aa2601604f2d4264cdfa02bcb46aae4ea3153da0ed05f11500c54fae6121d2"
        }
    },
    "pre_install": [
        "if (!(Test-Path \"$persist_dir\\retroarch.cfg\")) { Move-Item \"$dir\\retroarch.default.cfg\" \"$dir\\retroarch.cfg\" }",
        "'favorites', 'history' | ForEach-Object {",
        "    if (!(Test-Path \"$persist_dir\\content_$_.lpl\")) { New-Item \"$dir\\content_$_.lpl\" | Out-Null }",
        "}"
    ],
    "bin": "retroarch.exe",
    "shortcuts": [
        [
            "retroarch.exe",
            "RetroArch"
        ]
    ],
    "persist": [
        "assets\\wallpapers",
        "cores",
        "cheats",
        "config",
        "playlists",
        "records",
        "recordings",
        "saves",
        "screenshots",
        "shaders\\presets",
        "states",
        "system",
        "thumbnails",
        "content_favorites.lpl",
        "content_history.lpl",
        "retroarch.cfg"
    ],
    "checkver": {
        "url": "https://www.retroarch.com/?page=platforms",
        "regex": "The current stable version is: (?<main>[\\d.]+)(\\s*\\((\\w+)\\))?",
        "replace": "${3}${2}"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://buildbot.libretro.com/stable/$matchMain/windows/x86_64/RetroArch.7z"
            },
            "32bit": {
                "url": "https://buildbot.libretro.com/stable/$matchMain/windows/x86/RetroArch.7z"
            }
        }
    }
}
