    "hash": "99f4d225c6a838ad8ea0c9bce9aa5fdd3a4a205e7102674685c06931c58c43ed",
    "architecture": {
        "64bit": {
            "shortcuts": [
                [
                    "DiskInfo64S.exe",
                    "CrystalDiskInfo Shizuku Edition"
                ],
                [
                    "DiskInfoA64S.exe",
                    "CrystalDiskInfo Shizuku Edition (ARM)"
                ]
            ]
        },
        "32bit": {
            "shortcuts": [
                [
                    "DiskInfo32S.exe",
                    "CrystalDiskInfo Shizuku Edition"
