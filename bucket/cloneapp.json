{
    "version": "2.14.544",
    "description": "CloneApp. Backs up All Windows program settings.",
    "homepage": "https://www.mirinsoft.com/ms-apps/cloneapp",
    "license": {
        "identifier": "Freeware",
        "url": "https://www.mirinsoft.com/license"
    },
    "url": "https://github.com/mirinsoft/CloneApp/releases/download/2.14.544/cloneapp.zip",
    "hash": "f56e9846a5439f987526e34b5d2550474c5a913d5dae5d516bd135bebe1457d5",
    "pre_install": [
        "$file = 'Data\\cloneapp.ini'",
        "if (-not (Test-Path \"$persist_dir\\$file\")) {",
        "    Write-Host 'File' $file 'does not exists. Creating.' -f Yellow",
        "    $to = \"$(Split-Path \"$dir\")\\current\"",
        "    $CONT = @(",
        "        '[Settings]'",
        "        \"ClonePath=$to\\Backup\\\"",
        "        \"LogPath=$to\\Backup\\\"",
        "        'EditorPath=$AppEditor$'",
        "    )",
        "    $file = \"$dir\\$file\"",
        "    New-Item $file -Type File -Force | Out-Null",
        "    Set-Content $file ($CONT -join \"`r`n\") -Encoding Ascii",
        "}"
    ],
    "bin": "CloneApp.exe",
    "shortcuts": [
        [
            "CloneApp.exe",
            "CloneApp"
        ]
    ],
    "persist": [
        "BackUp",
        "Data\\cloneapp.ini"
    ],
    "checkver": {
        "url": "https://www.mirinsoft.com/downloads/ca_update/changelog.txt",
        "regex": "Changelog v([\\d.]+)"
    },
    "autoupdate": {
        "url": "https://github.com/mirinsoft/CloneApp/releases/download/$version/cloneapp.zip"
    }
}
