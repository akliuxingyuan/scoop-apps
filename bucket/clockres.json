    "hash": "e21f86bb680676071f5d283ef2e6353aaa5e8a1cd9d786d90f2b29b770a402e4",
    "pre_install": [
        "$sysint = 'HKCU:\\Software\\Sysinternals'",
        "$fin = \"$sysint\\ClockRes\"",
        "if (-not (Test-Path $sysint)) { New-Item $sysint -Force | Out-Null }",
        "if (-not (Test-Path $fin)) { New-Item $fin -Force | Out-Null }",
        "Set-ItemProperty -Path $fin -Name 'EulaAccepted' -Value 1 -Type DWord -Force | Out-Null"
    ],
    "architecture": {
        "64bit": {
            "bin": [
                "Clockres64.exe",
                [
                    "Clockres64.exe",
                    "Clockres"
                ]
            ]
        },
        "32bit": {
            "bin": "Clockres.exe"
        }
    },
    "checkver": "ClockRes\\s+v([\\d.]+)</h1",
    "autoupdate": {
        "url": "https://download.sysinternals.com/files/ClockRes.zip"
    }
