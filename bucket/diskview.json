{
    "version": "2.4",
    "description": "DiskView. Shows a graphical map of disk, allowing to determine where a file is located or, by clicking on a cluster, seeing which file occupies it.",
    "homepage": "https://docs.microsoft.com/en-us/sysinternals/downloads/diskview",
    "license": {
        "identifier": "Freeware",
        "url": "https://docs.microsoft.com/en-us/sysinternals/license-terms"
    },
    "url": "https://download.sysinternals.com/files/DiskView.zip",
    "hash": "1cfe9b3debeb6ecca96ded3f18f0a28cf823512dc037276350c358a7a9746082",
    "installer": {
        "script": [
            "$sysint = 'HKCU:\\Software\\Sysinternals'",
            "$fin = \"$sysint\\DiskView\"",
            "New-Item $sysint, $fin -ErrorAction SilentlyContinue -Force | Out-Null",
            "Set-ItemProperty -Path $fin -Name 'EulaAccepted' -Value 1 -Type DWord -Force | Out-Null"
        ]
    },
    "uninstaller": {
        "script": [
            "if ($purge) {",
            "    $sysInt = 'HKCU:\\Software\\Sysinternals'",
            "    Remove-Item \"$sysInt\\DiskView\" -Force -Recurse",
            "    if ((Get-ChildItem $sysInt).Count -eq 0) { Remove-Item $sysInt -Force -Recurse }",
            "}"
        ]
    },
    "shortcuts": [
        [
            "DiskView.exe",
            "SysInternals\\DiskView"
        ]
    ],
    "checkver": "DiskView\\s+v([\\d.]+)</h1",
    "autoupdate": {
        "url": "https://download.sysinternals.com/files/DiskView.zip"
    }
}
