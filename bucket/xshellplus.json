    "checkver": {
        "url": "https://sourceforge.net/projects/zapps/rss?path=/XshellPlus",
        "re": "/XshellPlus/XshellPlus-(.*).7z"
    },
    "autoupdate": {
        "url": "https://downloads.sourceforge.net/project/zapps/XshellPlus/XshellPlus-$version.7z",
        "hash": {
            "mode": "sourceforge"
        }
    },
    "depends": [
        "vcredist2008",
        "vcredist2012"
    ],
    "shortcuts": [
        [
            "Xftp.exe",
            "Xftp"
        ],
        [
            "Xshell.exe",
            "Xshell"
        ]
    ],
    "post_install": [
        "if (Test-Path \"$dir\\xshell-plus-install.reg\") {",
        "  $apppath = \"$dir\\\".Replace('\\', '\\\\')",
        "  $content = Get-Content \"$dir\\xshell-plus-install.reg\"",
        "  $content = $content.Replace('$path', $apppath)",
        "  $content | Set-Content -Path \"$dir\\xshell-plus-install.reg\"",
        "}",
        "regedit /s $dir\\xshell-plus-install.reg"
    ],
    "uninstaller": {
        "script": "regedit /s $dir\\xshell-plus-uninstall.reg"
    }
}
