{
    "version": "1.07",
    "description": "Junction. Create and list Win2K NTFS symbolic links.",
    "homepage": "https://docs.microsoft.com/en-us/sysinternals/downloads/junction",
    "license": {
        "identifier": "Freeware",
        "url": "https://docs.microsoft.com/en-us/sysinternals/license-terms"
    },
    "url": "https://download.sysinternals.com/files/Junction.zip",
    "hash": "65737caffa2a6196e8a698f749d0032bd6f56045e7e535ccd0833390322019c3",
    "installer": {
        "script": [
            "$sysint = 'HKCU:\\Software\\Sysinternals'",
            "$fin = \"$sysint\\Junction\"",
            "New-Item $sysint, $fin -ErrorAction SilentlyContinue -Force | Out-Null",
            "Set-ItemProperty -Path $fin -Name 'EulaAccepted' -Value 1 -Type DWord -Force | Out-Null"
        ]
    },
    "uninstaller": {
        "script": [
            "if ($purge) {",
            "    $sysInt = 'HKCU:\\Software\\Sysinternals'",
            "    Remove-Item \"$sysInt\\Junction\" -Force -Recurse",
            "    if ((Get-ChildItem $sysInt).Count -eq 0) { Remove-Item $sysInt -Force -Recurse }",
            "}"
        ]
    },
    "architecture": {
        "64bit": {
            "bin": [
                "junction64.exe",
                [
                    "junction64.exe",
                    "junction"
                ]
            ]
        },
        "32bit": {
            "bin": "junction.exe"
        }
    },
    "checkver": "Junction\\s+v([\\d.]+)</h1",
    "autoupdate": {
        "url": "https://download.sysinternals.com/files/Junction.zip"
    }
}
