        "    '    start \"anki\" /D \"%~dp0\" \"%~dp0anki.exe\" %*'",
        "    ')'",
        ") | Set-Content \"$dir\\anki.cmd\" -Encoding ASCII",
        "Remove-Item \"$dir\\`$*\" -Recurse"
